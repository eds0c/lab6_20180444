<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Color cuando se presiona -->
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color normal -->
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#D6D6D6" />
        </shape>
    </item>
</selector>
